#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	
	while(t--){
	    int n,a,b;
	    cin>>n>>a>>b;
	    
	    string s;
	    cin>>s;
	    
	    int count=0;
	    for(int i=0;i<n;i++){
	        if(s[i] == '0'){
	            count++;
	        }
	    }
	    
	    cout<<((count*a)+((n-count)*b))<<endl;
	}
	return 0;
}
